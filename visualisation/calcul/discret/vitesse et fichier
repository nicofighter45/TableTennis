def vitesse_track(nom,n) :
    for k in range (n) :
        Taille_pix, h, x = data("TableTennis/output/"+nom+"/tracked-{}.txt".format(k))
        v1 = vitesse(x)
        v2 = vitesse(h)
        fichier("TableTennis/Vitesse out put/"+nom+"/vitesse-{}.txt".format(k),v1,v2)

vitesse_track("5-rebond-sol",71)